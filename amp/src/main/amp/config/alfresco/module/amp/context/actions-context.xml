<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE beans PUBLIC '-//SPRING//DTD BEAN//EN' 'http://www.springframework.org/dtd/spring-beans.dtd'>
<beans>
	<bean
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="ignoreUnresolvablePlaceholders">
			<value>true</value>
		</property>
		<property name="locations">
			<list>
				<value>classpath:alfresco/extension/alfviral.properties</value>
			</list>
		</property>
	</bean>

	<bean id="alfviral.virusscan.action" class="com.fegor.alfresco.action.VirusScan"
		parent="action-executer">
		<property name="contentService">
			<ref bean="contentService" />
		</property>
		<property name="nodeService">
			<ref bean="nodeService" />
		</property>
		<property name="mode">
			<value>${alfviral.mode}</value>
		</property>
		<property name="command">
			<value>${alfviral.command}</value>
		</property>
		<property name="store">
			<value>${dir.contentstore}</value>
		</property>
		<property name="host">
			<value>${alfviral.host}</value>
		</property>
		<property name="port">
			<value>${alfviral.port}</value>
		</property>
		<property name="timeout">
			<value>${alfviral.timeout}</value>
		</property>
		<property name="chunkSize">
			<value>${alfviral.chunkSize}</value>
		</property>
		<property name="key">
			<value>${vt.key}</value>
		</property>
		<property name="url">
			<value>${vt.url}</value>
		</property>
		<property name="ICAPHost">
			<value>${alfviral.icap.host}</value>
		</property>
		<property name="ICAPPort">
			<value>${alfviral.icap.port}</value>
		</property>
		<property name="ICAPService">
			<value>${alfviral.icap.service}</value>
		</property>
		<property name="fileExceptions">
			<value>${alfviral.file.exceptions}</value>
		</property>
	</bean>
</beans>
